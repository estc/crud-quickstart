#if(${superControllerClass})
public class ${table.controllerName} extends ${superControllerClass} {
#else
public class ${table.controllerName} {
#end

    private final ${entity}Service ${table.entityPath}Service;

    /**
     * 新增
     *
     * @param ${table.entityPath}VO 创建VO
     * @return id
     */
    @PostMapping
    public CommonResult<Long> create(@RequestBody @Valid ${entity}VO ${table.entityPath}VO) {
        return success(${table.entityPath}Service.create(${table.entityPath}VO));
    }

    /**
     * 更新
     *
     * @param ${table.entityPath}VO 更新VO
     * @return true/false
     */
    @PutMapping
    public CommonResult<Boolean> update(@RequestBody @Valid ${entity}VO ${table.entityPath}VO) {
        ${table.entityPath}Service.update(${table.entityPath}VO);
        return success(true);
    }

    /**
     * 删除
     *
     * @param id id
     * @return true/false
     */
    @DeleteMapping
    public CommonResult<Boolean> delete(@RequestParam("id") Long id) {
        ${table.entityPath}Service.delete(id);
        return success(true);
    }

    /**
     * 查询单个
     *
     * @param id id
     * @return vo
     */
    @GetMapping
    public CommonResult<${entity}VO> get(@RequestParam("id") Long id) {
        return success(${table.entityPath}Service.get(id));
    }

    /**
     * 分页查询
     *
     * @param ${table.entityPath}VO 分页VO
     * @return pageResult
     */
    @GetMapping("/page")
    public CommonResult<PageResult<${entity}VO>> page(@Valid ${entity}VO ${table.entityPath}VO) {
        return success(${table.entityPath}Service.page(${table.entityPath}VO));
    }

    /**
    * 导出
    *
    * @param ${table.entityPath}VO 导出VO
    * @param response response
    * @throws IOException IO异常
    */
    @GetMapping("/export")
    public void exportExcel(@Valid ${entity}VO ${table.entityPath}VO, HttpServletResponse response) throws IOException {
        // 输出 Excel
        ExcelUtil.write(response, "${entity}VO.xls", "数据", ${entity}VO.class, ${table.entityPath}Service.page(${table.entityPath}VO).getList());
    }

    /**
     * 导入
     *
     * @param file 文件
     * @return 结果
     * @throws IOException IO异常
     */
    @PostMapping("/import")
    public CommonResult<Boolean> importExcel(@RequestParam("file") MultipartFile file) throws IOException {
        List<${entity}VO> read = ExcelUtil.read(file, ${entity}VO.class);
